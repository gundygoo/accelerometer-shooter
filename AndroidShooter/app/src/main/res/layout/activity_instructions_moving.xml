<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.student.androidshooter.Background
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainmenu2"
        android:background="@drawable/mainmenu"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveForward2"
        android:background="@drawable/forwardarrow"
        android:layout_marginTop="15dp"
        android:layout_gravity="right|top" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveBackward2"
        android:layout_marginTop="15dp"
        android:layout_gravity="left|top"
        android:background="@drawable/backwardarrow"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movementinstructions"
        android:layout_gravity="center|center"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center|bottom">

        <view
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            class="com.example.student.androidshooter.MovementInstructions"
            android:id="@+id/view"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>